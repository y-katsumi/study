root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_style = space
indent_size = 2
[*.ctp]
indent_style = space
indent_size = 2
[*.tpl]
indent_style = space
indent_size = 2
[*.phtml]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2
[*.scss]
indent_style = space
indent_size = 2


[*.php]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.coffee]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4

[.htaccess]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.rb]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2

[*.cs]
indent_style = tab
indent_size = 4
end_of_line = crlf

[*.bat]
end_of_line = crlf
